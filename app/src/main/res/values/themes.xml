<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BalanceHER" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/aqua</item>

        <item name="colorPrimaryVariant">@color/aqua_dark</item>

        <item name="colorSecondary">@color/soft_green</item>
        <item name="colorSecondaryVariant">@color/soft_green_light</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar">
        <item name="colorControlNormal">@color/green</item> <!-- Set your desired color here -->
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TimePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:colorAccent">@color/aqua</item>
        <item name="android:colorPrimary">@color/aqua</item>
        <item name="colorSecondary">@color/aqua</item>
        <item name="backgroundColor">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@color/aqua</item>
        <item name="buttonBarNegativeButtonStyle">@color/aqua</item>
    </style>
</resources>